{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@pages/*": ["src/pages/*"],
      "@shared/*": ["src/shared/*"],
      "@games/*": ["src/games/*"],
      "@widgets/*": ["src/widgets/*"], 
    },
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  }
}
